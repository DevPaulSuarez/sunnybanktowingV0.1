---
import MainLayout from "../layouts/MainLayout.astro";
import SliderAbout from "../components/Slider.astro";
import Detalles from "../components/Detalles.astro";
import Servicios from "../components/Servicios.astro";
import AreasCoverage from "../components/AreasCoverage.astro";
import Contacto from "../components/Contacto.astro";
import FAQ from "../components/FAQ.astro";
import SliderFooter from "../components/SliderFooter.astro";
import Footer from "../components/Footer.astro";
import Copyright from "../components/Copyright.astro";
import TopBar from "../components/TopBar.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
---

<!--Rutas y vistas del sitio --><!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pagina de About</title>
  </head>
  <body>
    <TopBar />
    <Navbar />
    <section id="sliderAbout">
      <SliderAbout />
    </section>
    <section>
      <div class="aboutSectionDetalles">
        <div class="conteinerImagen">
          <img src="/src/img/Remolque.jpg" alt="ImagenDeRemolque" />
        </div>
        <div class="containerTexto">
          <div class="tituloTexto">
            <h1>SunnyBank Towing</h1>
          </div>
          <div class="detallesTexto">
            <p>
              Servicio de grúa las 24 horas en Brisbane. Respuesta rápida y
              profesional cuando más lo necesitas.
            </p>
            <div class="serviciosDestacados">
              <div class="servicioItem">
                <div class="servicioIcono">
                  <img
                    src="/src/img/tow-truck-1.png"
                    alt="Respuesta Rápida"
                    width="64"
                    height="64"
                  />
                </div>
                <div class="servicioTitulo">
                  <h4>Respuesta Rápida</h4>
                </div>
              </div>

              <div class="servicioItem">
                <div class="servicioIcono">
                  <img
                    src="/src/img/semi-truck.png"
                    alt="Recuperación Encubierta"
                    width="64"
                    height="64"
                  />
                </div>
                <div class="servicioTitulo">
                  <h4>Recuperación Encubierta</h4>
                </div>
              </div>
            </div>
            <p>
              Remolque de vehículos livianos y pesados, asistencia en carretera
              y transporte seguro a cualquier destino.
            </p>
          </div>
          <div class="buttonContacto">
            <button name="Contact" type="button" class="btnContact">
              Contáctanos Ahora
            </button>
          </div>
        </div>
      </div>

      <section class="whyChooseSection">
        <div class="whyChooseUs">
          <div class="container">
            <h1>Why Choose Us</h1>
            <div class="containerText">
              <p>
                Reliable Service: We understand the frustration and
                inconvenience of vehicle breakdowns or accidents. That's why our
                towing company provides breakdown towing and general tilt tray
                services 24/7 across all Brisbane regions. As the provider of
                the best car removal services in Brisbane, you can rely on us
                anytime. <b>towing company</b>
              </p>
            </div>
          </div>
        </div>
        <div class="box">
          <div class="icon">
            <img src="src/img/quick-response.png" alt="quick-response" />
          </div>
          <div class="content">
            <span class="number">01</span>
            <h4>Prompt Response</h4>
            <p>
              Whether it's routine towing or an urgent roadside emergency, our
              team ensures fast, reliable, and professional service, giving you
              peace of mind every time.
            </p>
          </div>
        </div>

        <div class="box">
          <div class="icon">
            <img src="src/img/rate.png" alt="rate" />
          </div>
          <div class="content">
            <span class="number">02</span>
            <h4>Customer Satisfaction</h4>
            <p>
              Our priority is your satisfaction. With every job, we deliver
              dependable service and attention to detail.
            </p>
          </div>
        </div>

        <div class="box">
          <div class="icon">
            <img src="src/img/commission.png" alt="commission" />
          </div>
          <div class="content">
            <span class="number">03</span>
            <h4>Affordable Pricing</h4>
            <p>
              Affordability matters to us. That's why we maintain fair pricing
              while ensuring excellent service, so you receive outstanding value
              without sacrificing quality.
            </p>
          </div>
        </div>

        <div class="box">
          <div class="icon">
            <img src="src/img/wifi-signal.png" alt="wifi-signal" />
          </div>
          <div class="content">
            <span class="number">04</span>
            <h4>Extensive Coverage</h4>
            <p>
              Sunnybank Towing proudly serves all Brisbane, offering prompt, reliable towing assistance, ensuring
              you're never left stranded when you need help.
            </p>
          </div>
        </div>

        <div class="whyChooseImage">
          <img
            src="src/img/Remolque.jpg"
            alt="Sunnybank Towing Service Truck"
          />
        </div>
  </body>
</html>
