---
const phone = "+61 400 123 456";
const email = "info@sunnybanktowing.com.au";
const location = "Sunnybank, QLD";
---

<div class="bg-blue-600 text-white text-sm py-2 px-4">
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-2">
    <!-- Left: Logo -->
    <div class="flex items-center gap-2">
      <img src="/images/logo.png" alt="Logo Sunnybank" class="h-8 w-auto" />
      <span class="font-semibold tracking-wide">Sunnybank Towing</span>
    </div>

    <!-- Center: Contact Info -->
    <div class="flex flex-wrap justify-center gap-4 text-center">
      <a href={`tel:${phone}`} class="hover:underline">📞 {phone}</a>
      <a href={`mailto:${email}`} class="hover:underline">✉️ {email}</a>
      <span>📍 {location}</span>
    </div>

    <!-- Right: Redes sociales -->
    <div class="flex gap-3 text-lg">
      <a href="#" aria-label="Facebook" class="hover:text-yellow-300">🌐</a>
      <a href="#" aria-label="Instagram" class="hover:text-yellow-300">📸</a>
      <a href="#" aria-label="WhatsApp" class="hover:text-yellow-300">💬</a>
    </div>
  </div>
</div>
