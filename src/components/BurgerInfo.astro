---
/* BurgerInfo.astro ‚Äî versi√≥n final funcional en desktop y m√≥vil */
---

<style>
  .drawer {
    transition: transform 0.3s ease-in-out;
    transform: translateX(100%);
  }
  .drawer.open {
    transform: translateX(0);
  }
</style>

<!-- Bot√≥n hamburguesa -->
<button
  id="open-info-btn"
  aria-label="Open company info"
  class="p-2 bg-yellow-500 text-white rounded-md hover:bg-yellow-600 transition z-50"
>
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
  </svg>
</button>

<!-- Overlay -->
<div
  id="overlay"
  class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden opacity-0 transition-opacity duration-300 z-40"
></div>

<!-- Panel lateral -->
<aside
  id="info-panel"
  class="drawer fixed top-0 right-0 h-full w-full md:w-96 bg-white/95 shadow-2xl z-50 overflow-y-auto"
>
  <div class="p-6 h-full flex flex-col justify-between">
    <div>
      <div class="flex justify-between items-center mb-6">
        <img src="/images/logo.png" alt="Logo Bris Towing" class="h-10" />
        <button id="close-info-btn" aria-label="Close panel" class="text-gray-500 hover:text-red-500 text-2xl">
          ‚úñ
        </button>
      </div>

      <h2 class="text-2xl font-bold text-blue-700 mb-4">Bris Towing</h2>
      <p class="text-gray-600 text-sm leading-relaxed">
        At <strong>Bris Towing</strong>, we are dedicated to providing top-quality towing solutions across Brisbane.
        Whether you need standard towing, 24/7 emergency roadside assistance, free car removal, or instant cash for
        unwanted vehicles, you can rely on us for fast, dependable, and professional service‚Äîcustomized to suit your
        situation.
      </p>
    </div>

    <div class="mt-8 border-t border-gray-200 pt-4 text-sm text-gray-700">
      <h3 class="font-semibold text-blue-600 mb-2">Contact Info</h3>
      <ul class="space-y-2">
        <li>üìç Brisbane, Logan, Gold Coast, Ipswich</li>
        <li>‚úâÔ∏è bookings@brisbanetowingservice.com.au</li>
        <li>
          üìû
          <a href="tel:0466890373" class="text-blue-600 font-semibold hover:underline">
            Need Tow? Tap to Call
          </a>
        </li>
      </ul>
    </div>
  </div>
</aside>

<!-- Script -->
<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const btnOpen = document.getElementById("open-info-btn");
    const btnClose = document.getElementById("close-info-btn");
    const panel = document.getElementById("info-panel");
    const overlay = document.getElementById("overlay");

    if (!btnOpen || !btnClose || !panel || !overlay) {
      console.warn("BurgerInfo elements not found");
      return;
    }

    const openPanel = () => {
      panel.classList.add("open");
      overlay.classList.remove("hidden");
      requestAnimationFrame(() => overlay.classList.add("opacity-100"));
    };

    const closePanel = () => {
      panel.classList.remove("open");
      overlay.classList.remove("opacity-100");
      setTimeout(() => overlay.classList.add("hidden"), 300);
    };

    btnOpen.addEventListener("click", openPanel);
    btnClose.addEventListener("click", closePanel);
    overlay.addEventListener("click", closePanel);
  });
</script>
